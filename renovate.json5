{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    // Base config - https://github.com/giantswarm/renovate-presets/blob/main/default.json5
    "github>giantswarm/renovate-presets:default.json5",
  ],
  customManagers: [
    {
      description: 'Allow updating container images in executors',
      managerFilePatterns: ["src/executors/*.yaml"],
      matchStrings: ["image: (?<depName>\\S*):(?<currentValue>\\S*)"],
      datasourceTemplate: "docker",
      versioning: "loose",
    },
  ],
  packageRules: [
    {
      "matchDepNames": [
        "/^giantswarm/architect$/",
      ],
      "allowedVersions": "<= 9999.0.0", // fix for bad tags in architect like '9777070'
    },
  ],
}
